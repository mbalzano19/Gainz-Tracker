<%- include('../partials/header') %>

<div class="shadow-sm p-3 mb-5 bg-dark rounded fade-in-element">
    <h2 class="text-light text-center">Add Workout:</h2>
    <form action="/workouts" method="POST" autocomplete="off">
        <h3 class="text-light">Enter Workout Name:</h3>
        <input class="form-control" id=":focus" type="text" name="name" required><br>
        <h3 class="text-light">Enter Workout Date:</h3>
        <input class="form-control" id=":focus" type="date" name="date" required><br>
        <button type="submit" class="btn btn-primary btn-md">Add a workout</button>
    </form>
</div>

<%- include('../partials/footer') %>